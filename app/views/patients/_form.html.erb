<%= form_with model: patient do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> ocorreram durante o cadastro:</h2>
      <ul>
        <% patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table border="1" align="center" bgcolor="#6495ed">
    <tr>
      <td>
        <table border="2" align="center" bgcolor="#6495ed">
          <tr>
            <td>
              <%= form.label :nome %>
            </td>
            <td>
              <%= form.text_field :name %>
            </td>
          </tr>

          <tr>
            <td>
              <%= form.label :"data de nascimento" %>
            </td>
            <td>
              <%= form.date_field :birth %>
            </td>
          </tr>

          <tr>
            <td>
              <%= form.label "CPF (apenas nÃºmeros)" %>
            </td>
            <td>
              <%= form.text_field :cpf %>
            </td>
          </tr>

          <tr>
            <td>
              <%= form.label :email %>
            </td>
            <td>
              <%= form.email_field :email %>
            </td>
          </tr>
        </table>
      </td>
      <td>
        <table border="2" align="center" bgcolor="#6495ed">
          <tr>
            <%= form.fields_for :address do |address_form| %>
              <td>
                <%= address_form.label "CEP (apenas nÃºmeros)" %>
              </td>
              <td>
                <%= address_form.text_field :cep %>
              </td>
              </tr>
              <tr>
                <td>
                  <%= address_form.label :cidade %>
                </td>
                <td>
                  <%= address_form.text_field :city %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= address_form.label :bairro %>
                </td>
                <td>
                  <%= address_form.text_field :zone %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= address_form.label :logradouro %>
                </td>
                <td>
                  <%= address_form.text_field :street %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= address_form.label :complemento %>
                </td>
                <td>
                  <%= address_form.text_field :complement %>
                </td>
              </tr>
              </table>
            <% end %>
    <tr>
      <td colspan="2">
        <div align="center">
          <%= form.submit %>
        </div>
      </td>
    </tr>
    </td>
    </tr>
  </table>
<% end %>