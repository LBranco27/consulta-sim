<%= form_with model: @medic do |form| %>
  <% if @medic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medic.errors.count, "error") %> ocorreram durante o cadastro:</h2>
      <ul>
        <% @medic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table border="2" align="center" bgcolor="#6495ed">
    <tr>
      <td>
        <%= form.label :name %>
      </td>
      <td>
        <%= form.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= form.label "CPF (apenas nÃºmeros)" %>
      </td>
      <td>
        <%= form.text_field :cpf %>
      </td>
    </tr>
    <tr>
      <td>
        <%= form.label :email %>
      </td>
      <td>
        <%= form.email_field :email %>
      </td>
    </tr>
    <tr>
      <td>
        <%= form.label :speciality %>
      </td>
      <td>
        <%= form.text_field :speciality %>
      </td>
    </tr>
    <tr>
      <td>
        <%= form.label :crm %>
      </td>
      <td>
        <%= form.text_field :crm %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <div align="center">
          <%= form.submit %>
        </div>
      </td>
    </tr>
  </table>
<% end %>